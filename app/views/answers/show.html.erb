<div id='answer'>
	<h2>How do you say "<%= @answer.question.phrase %>" in <%=@answer.question.language.name %>?</h2>
	<span id='author'>Answered by <%= @answer.user.email %></span>
	<%= link_to "Edit Answer", [:edit, @question, @answer] %>
	<%= link_to "Delete Answer", [@question, @answer], method: :delete,
  data: { confirm: "Are you sure you want to delete this answer?"} %>
  <%= simple_format(@answer.response) %>
</div>


<audio controls="controls" autoplay>
  Your browser does not support the <code>audio</code> element.
<source src="/<%= @answer.filename %>" type='audio/wav'>
</audio>