<div id='answer'>
	<h2><%= @answer.response %></h2>
	<span id='author'>Answered by <%= @answer.user.email %></span>
	<%= link_to "Edit Answer", [:edit, @question, @answer] %>
	<%= link_to "Delete Answer", [@question, @answer], method: :delete,
  data: { confirm: "Are you sure you want to delete this answer?"} %>
  <%= simple_format(@answer.response) %>
</div>

